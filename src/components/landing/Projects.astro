---
import projects from "../../config/projects.json";

interface Project {
  title: string;
  description: string;
  image: string;
}
---

<section class="mb-10">
  <h2 class="font-bold text-5xl my-5 text-center">Projects</h2>
  {
    projects.map((project: Project) => (
      <div class="flex flex-col md:flex-row mb-2 text-center md:text-left">
        <div class="flex-1 p-4">
          <h2 class="font-bold text-2xl my-4">{project.title}</h2>
          <p class="text-xl my-2">{project.description}</p>
          <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 transition-all duration-200 rounded-md shadow-md text-white font-bold max-w-[150px] mx-auto md:mx-0">
            More info
          </button>
        </div>
        <div class="flex-1">
          <img src={project.image} alt={project.image} class="w-72 m-auto" />
        </div>
      </div>
    ))
  }
</section>
